<Window x:Class="CourseManagementApp.StudentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Management" Height="350" Width="600">
    <Grid>
        <DataGrid Name="StudentsDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="200" Margin="10"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,220,0,0" />
        <TextBox Name="RegNoTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="220,220,0,0" />
        <Button Content="Add Student" Name="AddStudentButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="440,220,0,0" Click="AddStudentButton_Click"/>
    </Grid>
</Window>
