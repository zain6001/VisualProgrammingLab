<Window x:Class="AppointmentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appointments" Height="350" Width="525">
    <Grid>
        <DataGrid Name="appointmentsDataGrid" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="480">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Appointment ID" Binding="{Binding AID}" />
                <DataGridTextColumn Header="Patient Name" Binding="{Binding PatientName}" />
                <DataGridTextColumn Header="Doctor Name" Binding="{Binding DoctorName}" />
                <DataGridTextColumn Header="Appointment Date" Binding="{Binding AppointmentDate}" />
                <DataGridTextColumn Header="Appointment Time" Binding="{Binding AppointmentTime}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
